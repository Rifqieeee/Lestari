<com.google.android.material.card.MaterialCardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:backgroundTint="@color/md_theme_dark_inverseSurface"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo_komunitas"
                android:layout_width="96dp"
                android:layout_height="92dp"
                android:src="@drawable/gedong_kuning"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/namaKomunitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="Sanggar Seni Gedhong Kuning"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/logo_komunitas"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/deskripsiKomunitas"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Kegiatan olah seni dan melestarikan seni tradisi Jawa"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/namaKomunitas"
                app:layout_constraintTop_toBottomOf="@+id/namaKomunitas" />

            <TextView
                android:id="@+id/almatKomunitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="Jl. Duku III, Jajar, Kec. Laweyan, Kota Surakarta, Jawa Tengah"
                app:layout_constraintTop_toBottomOf="@+id/logo_komunitas" />

            <LinearLayout
                android:id="@+id/infoMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/almatKomunitas">

                <com.google.android.material.button.MaterialButton
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="10 Member" />

                <com.google.android.material.button.MaterialButton
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 Pelatihan" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="337dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:text="Gabung"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/infoMember" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Buttons -->



</com.google.android.material.card.MaterialCardView>